---
export interface Props {
  title?: string;
  description?: string;
}

const { title = 'Peter Salmon', description = 'Personal site' } = Astro.props as Props;
import "../styles/global.css";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body class="min-h-screen font-sans bg-[#fffdfb] text-black antialiased flex">
    <main class="w-full max-w-7xl mx-auto flex-1 flex flex-col px-4 lg:px-6 xl:px-8 py-12 sm:py-10 lg:py-12 animate-fade-up">
      <slot />
    </main>
  </body>
</html>
