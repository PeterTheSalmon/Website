---
import Base from "../layouts/Base.astro";
---
<Base title="Peter Salmon">
  <section class="mb-12">
    <h1 class="font-serif text-5xl leading-tight mb-3 sm:text-3xl">Peter Salmon</h1>
    <div class="flex items-center gap-3 flex-wrap text-lg sm:text-base">
      <a href="mailto:pdfsalmon@gmail.com" class="hover:opacity-60 transition-opacity">pdfsalmon@gmail.com</a>
      <span class="opacity-30">•</span>
      <a href="tel:778-676-8643" class="hover:opacity-60 transition-opacity">778-676-8643</a>
    </div>
  </section>

  <section class="mt-12">
    <h2 class="font-serif text-[1.75rem] mb-5 sm:text-xl">My Projects</h2>
    <div class="flex flex-col gap-3">
      <a href="https://capitalreasoning.com" target="_blank" rel="noopener" class="hover:opacity-60 transition-opacity text-lg sm:text-base inline-block">
        Capital Reasoning Systems
        <span class="opacity-50 text-sm ml-1">(capitalreasoning.com)</span>
      </a>
      <a href="https://aceguitar.app" target="_blank" rel="noopener" class="hover:opacity-60 transition-opacity text-lg sm:text-base inline-block">
        AceGuitar
        <span class="opacity-50 text-sm ml-1">(aceguitar.app)</span>
      </a>
    </div>
  </section>

  <section class="mt-12">
    <a href="/peter-salmon-resume.pdf" target="_blank" rel="noopener" class="hover:opacity-60 transition-opacity text-lg sm:text-base inline-block">
      Resume <span aria-hidden="true">↗</span>
    </a>
  </section>
</Base>

